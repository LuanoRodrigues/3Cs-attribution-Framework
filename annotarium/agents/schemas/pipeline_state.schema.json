{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "pipeline_state",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "status", "current_stage", "stages", "artifacts"],
  "properties": {
    "run_id": {"type": "string", "minLength": 1},
    "status": {
      "type": "string",
      "enum": ["pending", "running", "completed", "failed"]
    },
    "current_stage": {"type": ["string", "null"]},
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["stage_id", "status"],
        "properties": {
          "stage_id": {"type": "string", "minLength": 1},
          "status": {
            "type": "string",
            "enum": ["pending", "running", "completed", "failed"]
          },
          "output_path": {"type": ["string", "null"]},
          "error": {"type": ["string", "null"]}
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "document_metadata": {"type": ["string", "null"]},
        "stage1_markdown_parse": {"type": ["string", "null"]},
        "stage2_claim_extraction": {"type": ["string", "null"]}
      }
    },
    "timestamps": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "created_at": {"type": ["string", "null"], "format": "date-time"},
        "updated_at": {"type": ["string", "null"], "format": "date-time"}
      }
    }
  }
}
