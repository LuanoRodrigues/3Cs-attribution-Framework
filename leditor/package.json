{
  "name": "leditor",
  "version": "0.1.0",
  "private": false,
  "type": "commonjs",
  "browser": {
    "node:fs/promises": "./scripts/shims/fs-promises.js"
  },
  "main": "dist/electron/main.js",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.cjs",
      "default": "./dist/lib/index.js"
    },
    "./global": "./dist/lib/leditor.global.mjs"
  },
  "scripts": {
    "prebuild": "bash ../run_convert_coder_state.sh",
    "prestart": "npm run build",
    "start": "GTK_USE_PORTAL=0 electron --no-sandbox --disable-setuid-sandbox --gtk-use-portal=0 --disable-features=UsePortal .",
    "prestart:dev": "npm run build",
    "start:dev": "GTK_USE_PORTAL=0 electron --no-sandbox --disable-setuid-sandbox --gtk-use-portal=0 --disable-features=UsePortal . --dev-unbundled",
    "test:docx-roundtrip": "node scripts/round_trip_docx_test.js",
    "generate:round-trip-fixture": "node scripts/create_round_trip_docx_fixture.js",
    "test:print-pdf-headless": "electron scripts/print_pdf_check.mjs",
    "test:csl": "node scripts/csl_citation_test.js",
    "test:citation-style-footnotes": "ELECTRON_DISABLE_SANDBOX=1 electron --no-sandbox --disable-setuid-sandbox --no-zygote scripts/citation_style_footnotes_smoke.cjs",
    "test:footnote-layout": "electron scripts/footnote_layout_smoke.cjs",
    "generate:templates": "node scripts/generate_template_index.mjs",
    "typecheck": "tsc --project tsconfig.json --pretty",
    "build:renderer": "npx esbuild scripts/renderer-entry.ts --bundle --platform=browser --format=esm --splitting --sourcemap --target=es2022 --define:__BUILD_TIME__=\\\"dev\\\" --outdir=dist/renderer --entry-names=bootstrap.bundle --chunk-names=chunk-[hash] --loader:.ttf=dataurl --loader:.woff=dataurl --loader:.woff2=dataurl --loader:.html=text --loader:.csl=text --loader:.xml=text --alias:node:fs/promises=./scripts/shims/fs-promises.js --external:@simonwep/pickr/dist/pickr.min.css",
    "build:lib:esm": "npx esbuild scripts/lib-entry.ts --bundle --platform=browser --format=esm --sourcemap --outdir=dist/lib --entry-names=index --chunk-names=chunks/[name]-[hash] --asset-names=assets/[name]-[hash] --loader:.ttf=dataurl --loader:.woff=dataurl --loader:.woff2=dataurl --loader:.html=text --loader:.csl=text --loader:.xml=text --alias:node:fs/promises=./scripts/shims/fs-promises.js --external:@simonwep/pickr/dist/pickr.min.css",
    "build:lib:cjs": "node scripts/build-lib-cjs-stub.mjs",
    "build:lib:global": "npx esbuild scripts/lib-global-entry.ts --bundle --platform=browser --format=esm --sourcemap --outfile=dist/lib/leditor.global.mjs --loader:.ttf=dataurl --loader:.woff=dataurl --loader:.woff2=dataurl --loader:.html=text --loader:.csl=text --loader:.xml=text --alias:node:fs/promises=./scripts/shims/fs-promises.js --external:@simonwep/pickr/dist/pickr.min.css",
    "build:lib": "npm run build:lib:esm && npm run build:lib:global && npm run build:lib:cjs",
    "build:public": "node scripts/copy-public.js",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build": "npm run generate:templates && npm run build:renderer && npm run build:public && npm run build:electron",
    "ribbon:validate": "node -e \"console.log('ribbon:validate removed (JSON ribbon deprecated)')\"",
    "test:pagination": "node scripts/pagination_fixture.mjs",
    "lint:icons": "node scripts/check-icons.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "esbuild": "^0.24.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@fluentui/react-icons": "^2.0.316",
    "@fontsource/roboto": "^5.2.9",
    "@fontsource/source-sans-3": "^5.2.9",
    "@fontsource/source-serif-4": "^5.2.9",
    "@openai/agents": "0.1.0",
    "@openai/agents-openai": "0.1.0",
    "@simonwep/pickr": "^1.9.1",
    "@tiptap/core": "^3.16.0",
    "@tiptap/extension-link": "^3.16.0",
    "@tiptap/extension-table": "^3.16.0",
    "@tiptap/extension-table-cell": "^3.16.0",
    "@tiptap/extension-table-header": "^3.16.0",
    "@tiptap/extension-table-row": "^3.16.0",
    "@tiptap/pm": "^3.16.0",
    "@tiptap/starter-kit": "^3.16.0",
    "citeproc": "^2.4.63",
    "dictionary-en": "^4.0.0",
    "diff-match-patch": "^1.0.5",
    "docx": "^9.5.1",
    "electron": "^26.0.0",
    "interactjs": "^1.10.27",
    "lucide": "^0.562.0",
    "mammoth": "^1.11.0",
    "nouislider": "^15.8.1",
    "nspell": "^2.1.5",
    "openai": "^6.16.0",
    "opentype.js": "^1.3.4",
    "pdf-lib": "^1.17.1",
    "phosphor-icons": "^1.4.2",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.5.0",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-tables": "^1.8.5",
    "prosemirror-transform": "^1.10.5",
    "prosemirror-view": "^1.41.5",
    "sanitize-html": "^2.17.0",
    "sweetalert2": "^11.26.18",
    "tinykeys": "^3.0.0",
    "zod": "^3.25.40"
  }
}
